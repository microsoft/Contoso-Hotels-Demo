{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "configurations": {
            "type": "array"
        },
        "automationAccountName": {
            "type": "string"
        },
        "automationAccountRGName": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
      {
          "type": "Microsoft.Compute/virtualMachines/extensions",
          "name": "[concat(parameters('configurations')[copyIndex()].vmName,'/', parameters('configurations')[copyIndex()].name)]",
          "apiVersion": "2020-06-01",
          "location": "[parameters('location')]",
          "copy": {
            "name": "configurationLoop",
            "count": "[length(parameters('configurations'))]"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.77",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "wmfVersion": "latest",
              "configurationArguments": {
                "RegistrationUrl" : "[reference(resourceId(parameters('automationAccountRGName'), 'Microsoft.Automation/automationAccounts', parameters('automationAccountName')), '2021-04-01').registrationUrl]",
                "NodeConfigurationName" : "[concat(parameters('configurations')[copyIndex()].name, '.localhost')]",
                "ConfigurationMode": "ApplyandAutoCorrect",
                "RebootNodeIfNeeded": true,
                "ActionAfterReboot": "ContinueConfiguration"
              }
            },
            "protectedSettings": {
              "configurationArguments": {
                "RegistrationKey": {
                  "userName": "NOT_USED",
                  "Password": "[listKeys(resourceId(parameters('automationAccountRGName'), 'Microsoft.Automation/automationAccounts', parameters('automationAccountName')), '2021-04-01').Keys[0].value]"
                }
              }
            }
          }
      }
    ],
    "outputs": {}
}